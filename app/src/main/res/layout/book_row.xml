<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/imageView"
        android:src="@drawable/sherly"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginStart="10dp"
        android:transitionName="mytransitionbook"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/textViewbookName"
        android:textColor="#123"
        android:textSize="16dp"
        android:text="Physics"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewBookAuthor"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/textViewBookAuthor"
        android:text="HC Verma"
        android:textColor="#d73f1c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textViewbookName"
        android:layout_alignStart="@+id/textViewbookName" />

    <TextView
        android:id="@+id/textViewPublisher"
        android:text="HCV"
        android:textColor="#f10018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_alignBottom="@+id/textViewbookName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:textColor="#0868c9"
        android:id="@+id/textViewBookCopy"
        android:layout_alignTop="@+id/textViewBookId"
        android:layout_alignRight="@+id/textViewBookPrice"
        android:layout_alignEnd="@+id/textViewBookPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200Rs"
        android:id="@+id/textViewBookPrice"
        android:layout_alignTop="@+id/textViewBookAuthor"
        android:layout_alignRight="@+id/textViewPublisher"
        android:layout_alignEnd="@+id/textViewPublisher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="121"
        android:id="@+id/textViewBookId"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/textViewBookAuthor"
        android:layout_alignStart="@+id/textViewBookAuthor" />

</RelativeLayout>